<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.mahibul.dccdigitalweek.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.mahibul.dccdigitalweek.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_schedule"
        android:name="com.mahibul.dccdigitalweek.ui.Schedule.SchduleFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_schdule" />

    <fragment
        android:id="@+id/nav_registration"
        android:name="com.mahibul.dccdigitalweek.ui.Registration.RegistrationFragment"
        android:label="Registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_nav_registration_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_organizer"
        android:name="com.mahibul.dccdigitalweek.ui.Organizers.OrganizersFragment"
        android:label="Organizers"
        tools:layout="@layout/fragment_organizers" />

    <fragment
        android:id="@+id/nav_contacts"
        android:name="com.mahibul.dccdigitalweek.ui.Contacts.ContactsFragment"
        android:label="Contacts"
        tools:layout="@layout/fragment_contacts" />

    <fragment
        android:id="@+id/nav_about"
        android:name="com.mahibul.dccdigitalweek.ui.About.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />

</navigation>