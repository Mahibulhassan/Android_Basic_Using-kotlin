<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/gradient_resourse_file"
android:padding="10dp"
tools:context=".feacher.contruct.view.ContructFragment">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Make your mail sms....."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/contuct_btn_call"
    android:background="@drawable/gradient_resourse_file"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/call_me"
    app:layout_constraintEnd_toStartOf="@+id/contuct_btn_email"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/contuct_btn_email"
    android:layout_width="wrap_content"
    android:background="@drawable/gradient_resourse_file"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@+id/contuct_btn_call"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="@string/email_me"/>

</androidx.constraintlayout.widget.ConstraintLayout>