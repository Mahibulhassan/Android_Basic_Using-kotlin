<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_student_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:src="@drawable/photo_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_studenname"
            style="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_studenemail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_student_photo"
            app:layout_constraintTop_toTopOf="@id/iv_student_photo"
            tools:ignore="MissingConstraints"
            tools:text="Name of the student" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_studenemail"
            style="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/email_icon"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_university"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_student_photo"
            app:layout_constraintTop_toBottomOf="@id/tv_studenname"
            tools:ignore="MissingConstraints"
            tools:text="mahibulhassan842@gmail.com" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_university"
            style="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/university_icon"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_student_photo"
            app:layout_constraintTop_toBottomOf="@id/tv_studenemail"
            tools:ignore="MissingConstraints"
            tools:text="National University" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>